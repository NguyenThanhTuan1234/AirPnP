<div class="row">
  <div class="col-md-6 offset-md-3 text-md-center">

    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/devisemes" %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm new password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password" , class: "btn btn-normal btn-block"%>
      </div>
    <% end %>
  </div>
</div>
