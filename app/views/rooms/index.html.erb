<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to t(".your_listings"), rooms_path, class: "sidebar-link active" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t(".your_reservations"), your_reservations_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t(".your_trips"), your_trips_path, class: "sidebar-link" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t(".listings") %>
      </div>
      <div class="card-block">
        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag room.cover_photo(:thumb) %>
            </div>
            <div class="col-md-7">
              <h4><%= room.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to t(".update"), listing_room_path(room), class: "btn btn-form btn-block"%>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
