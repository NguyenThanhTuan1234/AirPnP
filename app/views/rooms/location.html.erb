<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t ".location" %>
      </div>
      <div class="card-block">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row">
              <div class="form-group">
                <label><%= t ".address" %></label>
                <%= f.text_field :address, placeholder: t(".what_is_your_address"), class: "form-control", required: true, id: "autoaddress" %>
              </div>

            </div>
            <div class="text-md-center">
              <%= f.submit t(".save"), class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    $("#autoaddress").geocomplete();
  })
</script>
