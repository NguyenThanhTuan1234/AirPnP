<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t ".description" %>
      </div>
      <div class="card-block">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row">
              <div class="form-group">
                <label><%= t ".listing_name" %></label>
                <%= f.text_field :listing_name, placeholder: t(".what_is_your_listing_name"), class: "form-control", required: true %>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <label><%= t ".summary" %></label>
                <%= f.text_area :summary, rows: 5, cols: 25, placeholder: t(".summary_of_your_house"), class: "form-control", required: true %>
              </div>
            </div>
            <div class="text-md-center">
              <%= f.submit t(".save"), class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
