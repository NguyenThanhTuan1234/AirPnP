<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t ".amenities" %>
      </div>
      <div class="card-block">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_tv %><%= t ".tv" %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_kitchen %><%= t ".kitchen" %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_internet %><%= t ".internet" %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_heating %><%= t ".heating" %>
              </div>
              <div class="col-md-4">
                <%= f.check_box :is_air %><%= t ".air" %>
              </div>
            </div>
            <br>
            <div class="text-md-center">
              <%= f.submit t(".save"), class: "btn btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
